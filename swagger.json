{
    "swagger": "2.0",
    "info": {
      "title": "Workshop Management API",
      "description": "API documentation for Workshop Management system",
      "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": ["http"],
    "paths": {
      "/workshops": {
        "get": {
          "summary": "Get all workshops",
          "description": "Fetches a list of all workshops",
          "responses": {
            "200": {
              "description": "A list of workshops",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Workshop"
                }
              }
            }
          }
        }
      },
      "/workshops/{id}": {
        "get": {
          "summary": "Get workshop by ID",
          "description": "Fetches a specific workshop by its ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string",
              "description": "The workshop ID"
            }
          ],
          "responses": {
            "200": {
              "description": "Workshop details",
              "schema": {
                "$ref": "#/definitions/Workshop"
              }
            },
            "404": {
              "description": "Workshop not found"
            }
          }
        }
      }
    },
    "definitions": {
      "Workshop": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "1"
          },
          "title": {
            "type": "string",
            "example": "React Workshop"
          },
          "start_time": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-25T10:00:00Z"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "confirmed", "cancelled"],
            "example": "pending"
          }
        }
      }
    }
  }
  